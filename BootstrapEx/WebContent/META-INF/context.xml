<Context path="/BootstrapEx" docBase="www">
<Resource
	name="jdbc/BootstrapEx"
	auth="Container"
	type="javax.sql.DataSource"
	driverClassName="com.mysql.jdbc.Driver"
	loginTimeout="10"
	validationQuery="SELECT 1 FROM DUAL"
	maxWait="5000"
	maxIdle="3000"
	maxActive="1000"
	username="root"
	password="1234"
	testOnBorrow="true"
	url="jdbc:mysql://localhost:3306/SENIER"/>
	<ResourceLink type="javax.sql.data.DataSource"
		name="jdbc/SENIER"
		global="jdbc/SENIER"/>
</Context>
